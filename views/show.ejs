<div style="" class="row">
  <div style="text-align:center;height:100px;background-color:black;" class="col col-lg-6 col-sm-12 col-xs-12">
    
    <p style="margin-top:30px;
              color:white;
              font-family: 'Nunito', sans-serif;
              "><span style="font-size:25px;">Plain Black(42)</span></p> 
  </div>
  
    <div style="text-align:center;height:100px;background-color:#bcbcbc;" class="col col-lg-6 col-sm-12 col-xs-12">
    
    <p style="margin-top:30px;
              color:black;
              font-family: 'Nunito', sans-serif;
              "><span style="font-size:25px;">Price : <%=product.Price%> </span></p> 
  </div>
   

</div>



<div class="row">
  
  <div class="col col-lg-6 col-sm-12 col-xs-12">
   
    
<!--   Carousel   -->
    
    
    <div class="">

  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

      <div class="item active">
        <img src="<%=product.ImageMain%>"  style="width:100%;">
        <div class="carousel-caption">
          <h3></h3>
          <p></p>
        </div>
      </div>

      <div class="item">
        <img src="<%=product.ImageMain%>"  style="width:100%;">
        <div class="carousel-caption">
          <h3></h3>
          <p></p>
        </div>
      </div>
    
      <div class="item">
        <img src="<%=product.ImageMain%>" alt="New York" style="width:100%;">
        <div class="carousel-caption">
          <h3></h3>
          <p></p>
        </div>
      </div>
  
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev"
       style="background:none">
      <span style="color:black;" class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next"
        style="background:none">
      <span  style="color:black;" class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
    
    <!--   Carousel   -->
    
    <script>
 $('.carousel').each(function(){
        $(this).carousel({
            interval: false
        });
    })
    </script>
    
  
  </div>
  
  
  
  <div class="container">
  
  <div class="row">
  
  <div style=" font-family: 'Nunito', sans-serif;" class="col col-lg-6 col-sm-12 col-xs-12">
    

     
    
    
    
    
    
    
    <form  action = '/buy/<%=product._id%>/order' method = "post">  
    <div style="margin-top:50px;" class="form-group">
      
      
      <div class="container">
        
         <label>Choose size</abel>
        <textarea spellcheck="false" id="SizeField" class="form-control"  style="text-align:center;
                                                              font-size:30px;
                                                              background-color:white;
                       " name='Size' rows="1" readonly></textarea><br>
      
      <div  style="text-align:center" class="row">
      <div style="" class="col col-lg-3 col-6-sm col-xs-3">
        <span id="size1" style="border:solid 1px #bcbcbc;
                     padding:5px 15px 5px 15px;
                     border-radius:17px">L</span>
      </div>
      <div class="col col-lg-3 col-6-sm col-xs-3">
       <span id="size2"style="border:solid 1px #bcbcbc;
                     padding:5px 15px 5px 15px;
                     border-radius:17px">XL</span>
      </div>
      <div class="col col-lg-3 col-6-sm col-xs-3">
      <span  id="size3"style="border:solid 1px #bcbcbc;
                     padding:5px 15px 5px 15px;
                     border-radius:17px">XXL</span>
      </div>
      <div class="col col-lg-3 col-6-sm col-xs-3">
       <span id="size4" style="border:solid 1px #bcbcbc;
                     padding:5px 15px 5px 15px;
                     border-radius:17px">XXXL</span>
      </div>
    </div>
      
         <input  spellcheck="false"
                style="margin-top:20px;
                text-align:center;" 
        class="form-control" type = 'number' name = 'AreaPincode' placeholder = 'Area Pincode' required>
        
          <textarea  spellcheck="false"
                    style="margin-top:20px;" 
        class="form-control" type = 'text' name = 'ShippingAddress' placeholder = 'Shipping address' rows="4" required></textarea>
        
        <input  spellcheck="false"
               style="margin-top:20px;
                text-align:center;" 
        class="form-control" type = 'text' name = 'UserFullName' placeholder = 'Your full name' required>
        
         <input  spellcheck="false"
                style="margin-top:20px;
                text-align:center;" 
        class="form-control" type = 'number' name = 'UserPhoneNo' placeholder = 'Mobile No.' required>
        
        
        <p> Quantity:
          <select style="margin-top:20px;background-color:white;" name="Quantity">
  <option value="1">1</option>
  <option value="2">2</option>
  <option value="3">3</option>
  <option value="4">4</option>
     </select>
        </p>
        
        
              <button style="background-color:black;
                  color:white;
                  width:100%;
                  border:solid 2px black;
                  margin-top:20px;
                  height:40px;" >Place order</button>
        
        
        
      </div>
      
     
      
      

      

    
   

      </div>
      
    
</form>
    
  
  </div>
  
</div>
  
    <style>
      .Selected{
        background-color:black;
        color:white; 
      }
    </style>
    
  
  <script>
    
    $("#size1").click(function(){
       $("#SizeField").text("L");
       $("#size1").addClass('Selected');
       $("#size2").removeClass('Selected');
       $("#size3").removeClass('Selected');
       $("#size4").removeClass('Selected');
       
    })
    
      $("#size2").click(function(){
       $("#size2").addClass('Selected');
       $("#size1").removeClass('Selected');
       $("#size3").removeClass('Selected');
       $("#size4").removeClass('Selected');
       $("#SizeField").text("XL");
    })
    
      $("#size3").click(function(){
       $("#size3").addClass('Selected');
       $("#size2").removeClass('Selected');
       $("#size1").removeClass('Selected');
       $("#size4").removeClass('Selected');
       $("#SizeField").text("XXL");
    })
    
      $("#size4").click(function(){
       $("#size4").addClass('Selected');
       $("#size2").removeClass('Selected');
       $("#size3").removeClass('Selected');
       $("#size1").removeClass('Selected');
       $("#SizeField").text("XXXL");
    })
    
    
    
  </script>
  
  
  

  
  
  
  
</div>